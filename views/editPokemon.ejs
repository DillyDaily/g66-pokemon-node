<div class = "main">
    <div class = "selection">
        <div class = "container"> 
          <div class = "title white">
            <h1>Edit <%= trainers.name %> </h1>
          
        <!-- Dropdown Trigger -->
        <div class="row">
          <div class="input-field col s12">  
            <form action="/editPokemon/<%= profile.id %>" method="post" class="col s12 white">
        
                <select name="trainer">
                    <option selected>Choose your trainer</option>
                    <% for (let i=0; i<name.length; i++){ %>
                     
                    <option value="<%= name[i].id%>" ><%= name[i].name%>  <% name[i].id %> </option>
                    <% } %>
                   
                </select>
                <input type="text" name="cp" value= "<%= profile.cp %>" >
                <input type="text" name="in_gym" value= "<%= profile.in_gym %>" >
                <input type="number" name="id" value= "<%= trainers.id %>" >

                <input type="submit">
            </form>
           </div>
          </div>
        </div>
      </div>
    </div>
    
    </div>
