<body>
    <nav>
      <div class="nav-wrapper yellow darken-2">
        <a href="#" class="brand-logo"><img class="pokemon-logo-image" src="../images/pokemon-logo.png"></a>
        <ul id="navText" class="right hide-on-med-and-down">
            <li><a href="/trainers">TRAINERS</a></li>
            <li><a href="/">POKEMON</a></li>
            <li><a href="/gym">GYM</a></li>
        </ul>
      </div>
