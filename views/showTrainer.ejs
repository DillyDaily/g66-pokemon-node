            <h1>Trainer: <%= trainerName.name %></h1>
            <table>
                <thead>
                    <tr>
                        <th>Trainer</th>
                        <th>Combat Power</th>
                        <th>In Gym</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i=0; i<display.length; i++){ %>
                        <tr>
                            <td><%= display[i].name %></td>
                            <td><%= display[i].cp %></td>
                            <td><%= display[i].in_gym %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
      </div>
